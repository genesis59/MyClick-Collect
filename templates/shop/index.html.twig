{% extends 'base.html.twig' %}

{% block title %}Administration magasin{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-4 col-lg-3 bg-secondary text-center">
        <h3 class="mt-3">Selectionnez une action:</h3>
        <div class="row">
            <div class="col">
                <a href="{{ path('shop_new-shop')}}" class="btn btn-dark btn-block my-3">Cr√©er un commerce</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="dropdown">
                    <a role="button" class="btn btn-dark btn-block mb-3 dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Editer un commerce
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        {% for shop in shopList %}
                            <a href="{{ path('shop_edit-shop',{'id': shop.id}) }}" class="dropdown-item" type="button">{{ shop.nameShop }}</a>
                        {% endfor %}
                    </div>
                  </div>
            </div>
        </div>
    </div>
    <div class="col-md-8 col-lg-9 mb-5">
        <div class="container">
            <h1 class="mt-4">Bienvenue {{ current_user.firstName }} sur votre espace de gestion !!!</h1>      
            <div class="row">
                {% for shop in shopList %}
                    <div class="col-lg-6 col-xl-4">
                        <div class="card border border-dark mt-4 ml-5" style="width: 18rem;">
                            <img class="card-img-top" src="{{ shop.picture }}" alt="Photo du magasin" height="160" width="200">
                    <!--    <img class="card-img-top" src="/images/{{ shop.picture }}" alt="Photo du magasin" height="160" width="200"> -->
                            <div class="card-body">
                                <h5 class="card-title">{{ shop.nameShop }}</h5>
                                <p class="card-text">{{ shop.presentation }}</p>
                                <div class="row">
                                    <div class="col">
                                        <a href="#" class="btn btn-primary btn-block">Entrer</a> 
                                    </div>
                                    <div class="col">
                                        <a href="{{ path('shop_edit-shop',{'id': shop.id}) }}" class="btn btn-primary btn-block">Editer</a> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div> 
            <div class="row justify-content-center mt-4">
                {{ knp_pagination_render(shopList) }}
            </div>     
        </div>
    </div>
</div>
{% endblock %}
